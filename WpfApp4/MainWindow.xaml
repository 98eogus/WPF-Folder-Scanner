<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Scanner" Height="520" Width="900">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 컨트롤 -->
            <RowDefinition Height="Auto"/>
            <!-- 진행률/상태 -->
            <RowDefinition Height="*"/>
            <!-- 데이터그리드 -->
        </Grid.RowDefinitions>

        <!-- 상단: 폴더/스캔/TOPN -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox Width="420"
             Margin="0,0,8,0"
             Text="{Binding SelectedFolder, Mode=OneWay}"
             IsReadOnly="True"
             ToolTip="선택된 폴더 경로" />
            <Button x:Name="btnBrowse" Click="btnBrowse_Click" Content="폴더 선택" Width="100" Margin="0,0,8,0"/>
            <Button x:Name="btnScan"   Click="btnScan_Click"   Content="스캔"       Width="80"  Margin="0,0,8,0"/>
            <Button x:Name="btnCancel" Click="btnCancel_Click" Content="취소"       Width="80"  Margin="0,0,8,0" IsEnabled="False"/>
            <TextBlock VerticalAlignment="Center" Text="TOP N:" Margin="16,0,4,0"/>
            <TextBox x:Name="TOPN" Width="60" Text="5" Margin="0,0,4,0"/>
            <Button x:Name="btnTOPN" Click="btnTOPN_Click" Content="TOPN 출력" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,8">
            <ProgressBar x:Name="progressBar"
                 Height="18" Width="420"
                 IsIndeterminate="{Binding IsIndeterminate}"
                 Minimum="0"
                 Maximum="{Binding ProgressMax}"
                 Value="{Binding ProgressValue}"
                 Margin="0,0,8,0"/>
            <TextBlock VerticalAlignment="Center"
               Text="{Binding ProgressText}"
               Width="220"/>
        </StackPanel>

        <!-- 결과 -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding ExtensionStats}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="확장자" Binding="{Binding Extension}" Width="*"/>
                <DataGridTextColumn Header="파일수" Binding="{Binding FileCount}" Width="120"/>
                <DataGridTextColumn Header="총 바이트" Binding="{Binding TotalBytes}" Width="160"/>
                <DataGridTextColumn Header="읽기 쉬운 용량" Binding="{Binding TotalSize}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
